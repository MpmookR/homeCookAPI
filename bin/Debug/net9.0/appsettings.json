{
  "ConnectionStrings": {
    "Connection": "${DATABASE_CONNECTION}"
  },
  
  "EmailSettings": {
    "SmtpServer": "${SMTP_SERVER}",
    "SmtpPort": 587,
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}"
  },

  "Jwt": {
  "Key": "SuperSecureJWTKeyThatIsAtLeast32CharactersLong!",
  "Issuer": "${JWT_ISSUER}",
  "ExpireHours": 1
},


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
